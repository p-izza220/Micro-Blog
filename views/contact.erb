<div class="contactWrapper">	
	<div class="container" >	
		<div class="col-md-12 text-center">
		  	<form method="POST" action="/contact" id="contactForm">
	    		<label for="name" class="contText">Please enter your name: </label>
	    		<input type="text" name="name" placeholder="Name" class="contText" />
	    		<br>
	    		<br>
	    		<label for="email" class="contText">Please enter your email address: </label>
	   		 	<input type="email" name="email" placeholder="Email" class="contText" />
	   			<br>
	    		<br>
	  			<textarea cols="30" rows="10" name="message" maxlength="500"></textarea>
	  			<p id="cLim"> character limit: 500 </p>
	  			<br>
	  			<br>
	  			<input type="submit" class="btnContact"/>
	  		</form>
	  			<span id="console"><%= @msg %></span>
		</div>
	</div>
</div>